{
	"pinVersions": false,
	"semanticCommits": true,
	"semanticPrefix": "build",
	"commitMessage": "{{semanticPrefix}} update {{depName}} to version {{newVersion}}",
	"separateMajorMinor": false,
	"baseBranches": [
		"master"
	],
	"ignoreDeps": [
		"webpack-subresource-integrity"
	],
	"packageFiles": [
		"package.json",
		"packages/**/package.json"
	],
	"packageRules": [
		{
			"packagePatterns": [
				"^@angular\/.*"
			],
			"groupName": "angular",
			"pinVersions": false
		},
		{
			"packagePatterns": [
				"^@bazel\/.*"
			],
			"groupName": "bazel",
			"pinVersions": false
		},
		{
			"packageNames": [
				"typescript"
			],
			"updateTypes": "patch"
		}
	]
}